body,
html 
  font-size: .16rem;
  color: #ffffff;
  font-size: .24rem;
  font-family: 'PingFangSC-Regular', 'sans-serif';
  -webkit-text-size-adjust: 100%;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-font-smoothing: antialiased;
  -webkit-overflow-scrolling: none;
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
  line-height: 1.2;
  user-select: none;
  -webkit-user-select: none;
  touch-action: manipulation;
  background: #c8c8c8;
  position: relative;

ul,
dl,
dt,
dd,
ol,
li,
p,
h1,
h2,
h3,
h4,
h5,
h6,
i,
b
  margin: 0;
  padding: 0;
  font-style: normal;
  font-weight: normal;
  font-size: 16px;
  list-style: none

input,
textarea,
button
  margin: 0;
  padding: 0;
  outline: none;
  resize: none;
  font-size: .32rem;
  -webkit-text-size-adjust: 100%;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  border: none
img
  border: none;
  outline: none;
  padding: 0;
  margin: 0;
  vertical-align: middle

a
  text-decoration: none

a img
  border: none;
  margin: 0;
  padding: 0